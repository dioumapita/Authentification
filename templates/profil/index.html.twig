{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
    <section class="bg-primary">
        <div class="container">
            <div class="page-title text-white text-center">
                <h2 data-animate="fadeInUp" data-delay="1.2">Mon Profil</h2>
                <ul class="list-inline" data-animate="fadeInUp" data-delay="1.4">
                    <li>
                        <a href="{{ path('app_home') }}"><i class="fa fa-home"></i>Accueil</a>
                    </li>
                    <li>/</li>
                    <li>
                        <a href="#">Mon Profil</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>

    <div class="container mt-5">
        <div class="main-body mb-5">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {% if app.user.avatar == null %}
                                <img src="/uploads/avatar/default_avatar.png" alt="utilisateur" class="rounded-circle" width="150">
                            {% else %}
                                <img src="/uploads/avatar/{{ app.user.avatar }}" alt="utilisateur" class="rounded-circle" width="150">
                            {% endif %}
                            <div class="row">
                                <div class="mt-3">
                                <a href="{{ path('app_update_profil') }}" class="btn btn-primary">Modifier mon profil</a>
                                    <br><br>
                                <a href="{{ path('app_change_password') }}" class="btn btn-outline-primary">Changer mon mot de passe</a>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Nom</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {{ app.user.nom }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Pr√©nom</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {{ app.user.prenom }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {{ app.user.email }}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {{ app.user.adresse }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
