{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <section class="bg-primary mt-0">
        <div class="container">
            <div class="page-title text-white text-center">
                <h2 data-animate="fadeInUp" data-delay="1.2">Créer un compte</h2>
                <ul class="list-inline" data-animate="fadeInUp" data-delay="1.4">
                    <li>
                        <a href="{{ path('app_home') }}"><i class="fa fa-home"></i>Accueil</a>
                    </li>
                    <li>/</li>
                    <li>
                        <a href="#">Créer un compte</a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <div class="container">
        <div class="mx-auto col-md-6 col-lg-6 col-6 mt-3 mb-5">
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nom) }}
                {{ form_row(registrationForm.prenom) }}
                {{ form_row(registrationForm.adresse) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                <p>Whyinfos est un site d'information qui vous informe des actualités.</p>
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="container text-center">
                    <button type="submit" class="btn btn-block btn-primary">Créer mon compte</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    <br><br>
    
{% endblock %}
